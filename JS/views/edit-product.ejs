<%- include('./partials/header.ejs', {title: 'E-Sembako - Add Product', categories: undefined, sellerId: sellerId})  -%>
<div class="container body-panel">
    <div class="row justify-content-center">
        <div class="col-9">
            <form id="add-form" action="/sellers/<%= sellerId %>/edit?productId=<%= product.id %>" method="POST">
                <div class="form-group">
                <label class="bold" for="exampleFormControlInput1">Nama Produk</label>
                <input name="name" type="text" class="form-control" id="exampleFormControlInput1" value="<%= product.name %>">
                </div>
                <div class="form-group" id="cat-select">
                <label class="bold" for="exampleFormControlSelect2">Pilih Kategori</label><br>
                <select name="CategoryId">
                    <% categories.forEach(cat => { %>
                        <% if (product.CategoryId === cat.id) { %>
                            <option value="<%= cat.id %>" selected><%= cat.name %></option>
                        <% } else {%>
                            <option value="<%= cat.id %>"><%= cat.name %></option>
                        <% } %> 
                    <% }) %>
                </select>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label class="bold" for="">Harga</label>
                        <input name="price" value="<%= product.price %>" type="text" class="form-control">
                        </div>
                        <div class="col">
                            <label class="bold" for="">Stock</label>
                        <input name="stock" type="text" value="<%= product.stock %>" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                <label class="bold" for="exampleFormControlTextarea1">Deskripsi Produk</label>
                <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="10"><%= product.description %></textarea>
                </div>
                <div class="form-group add-10-margin">
                    <div class="row">
                        <div class="col">
                            <label class="add-10-margin bold" for="">Image URL</label>
                            <input name="imageUrl" id="source-pic" type="text" value="<%= product.imageUrl %>" class="form-control">
                        </div>
                        <div class="col">
                            <label class="add-10-margin bold" for="">Video URL (Jika ada)</label>
                            <input name="videoUrl" id="source-video" value="<%= product.videoUrl %>" type="text" class="form-control">
                        </div>
                        <div class="col">
                            <label class="add-10-margin bold" for="">Berat (gram)</label>
                            <input name="weight" type="text" value="<%= product.weight %>" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group add-10-margin">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="#" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Cancel</a>
                </div>
            </form>
        </div>
        <div class="col-3">
            <div class="text-center">
                <h4 id="media-preview">Media Preview</h4>
            </div>
            <div class="text-center">
                <img src="<%= product.imageUrl %>" id="target-pic" class="img-fluid" alt="<%= product.name %>-pic">
            </div>
           
            <div style="margin-top: 20px;" id="video-previewer" class="text-center">
                <div class="embed-responsive embed-responsive-16by9">
                    <video width="320" height="240" controls autoplay>
                        <source id="target-video" src="<%= product.videoUrl %>" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
            
        </div>
    </div>
</div>
<%- include('./partials/footer.ejs') -%>