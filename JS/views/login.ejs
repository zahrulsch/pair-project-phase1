<%- include('./partials/prelogin-header.ejs', {title: 'Masuk Dulu | E-Sembako'}) -%> 
    <div id="login">
        <h1 class="title text-center text-white pt-5">E-Sembako</h1>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center text-info">Seller Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Nama pengguna :</label><br>
                                <input type="text" name="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Kata sandi :</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>
                            <div class="form-group-bottom">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Login">
                                <div id="register-link" class="text-right">
                                    <a href="/sellers/register" class="text-info">Register here</a>
                                </div>
                            </div>

                            <% if (errors !== undefined) { 
                                errors = errors.split(',')
                            %>
                            
                            <% errors.forEach(error => { %>
                                <div style="margin-top: 20px;" class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <strong><%= error %> !</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            <% }) %>

                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('./partials/prelogin-footer.ejs') -%> 